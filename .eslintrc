{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel",
    "promise",
    "immutable"
  ],
  "env": {
    "node": true
  },
  "globals": {},
  "rules": {
    "comma-dangle"         : ["error", "always-multiline"],
    "key-spacing"          : 0,
    "semi"                 : [2, "always"],
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "require-await"        : "error"
  }
}
